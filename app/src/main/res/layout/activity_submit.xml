<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".submit.Submit"
    android:background="@drawable/side_nav_bar"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/submit2"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#e3e3e3"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/textmidlle"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/new_submit"
                        android:id="@+id/textmidlle"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_centerInParent="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#e3e3e3"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/textmidlle"/>


                </RelativeLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:startIconDrawable="@drawable/ic_pin_drop_black_24dp"
                    android:layout_height="wrap_content"
                    style="@style/Theme.MaterialComponents.Light.DarkActionBar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Choisissez d'abord la localisation du problème"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:textSize="14sp"
                        android:enabled="false"
                        style="@style/Theme.MaterialComponents.Light.DarkActionBar"
                        android:id="@+id/localisation"
                        android:inputType="phone"/>

                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choisir"
                        android:id="@+id/changeLoc"
                        android:textStyle="italic"
                        android:singleLine="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentEnd="true"/>



                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commune du problème à soumettre"
                    android:textStyle="italic"
                    android:singleLine="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:id="@+id/commune"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrondissements"
                    android:textStyle="italic"
                    android:singleLine="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:id="@+id/arrond"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"  />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catégorie du problème"
                    android:textStyle="italic"
                    android:singleLine="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:id="@+id/category"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"  />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#e3e3e3"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/textmidllea"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Le problème"
                        android:id="@+id/textmidllea"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_centerInParent="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#e3e3e3"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/textmidllea"/>


                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"
                    app:counterMaxLength="100"
                    app:counterEnabled="true"
                    android:focusedByDefault="false"
                    app:counterTextColor="@color/colorPrimary"
                    style="@style/Theme.MaterialComponents.Light.DarkActionBar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:maxLength="100"
                        android:focusedByDefault="false"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:id="@+id/title"
                        android:hint="Titre du problème"/>

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"
                    app:counterMaxLength="500"
                    android:id="@+id/descLayout"
                    app:counterEnabled="true"
                    android:focusedByDefault="false"
                    app:counterTextColor="@color/colorPrimary"
                    style="@style/Theme.MaterialComponents.Light.DarkActionBar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:focusedByDefault="false"
                        android:hint="Décrivez en 500 mots au maximum le problème"
                        android:maxLength="500"
                        android:id="@+id/desc"
                        android:textSize="14sp"
                        android:maxLines="6" />

                </com.google.android.material.textfield.TextInputLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/headnvLayout"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#e3e3e3"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/textmidlle8"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description vocale du problème"
                        android:id="@+id/textmidlle8"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_centerInParent="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#e3e3e3"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/textmidlle8"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/nvLayout"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <Chronometer
                            android:id="@+id/record_timer"
                            android:textSize="16sp"
                            android:layout_margin="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lire"
                            android:layout_margin="5dp"
                            android:id="@+id/play"
                            android:visibility="gone"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Supprimer"
                            android:layout_margin="5dp"
                            android:id="@+id/delete"
                            android:visibility="gone"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/record_btn"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/white"
                        android:src="@drawable/record_btn_stopped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#e3e3e3"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/textmidlle3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ajouter au plus 2 photos"
                        android:id="@+id/textmidlle3"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_centerInParent="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#e3e3e3"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/textmidlle3"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="@dimen/img_width_height"
                        android:layout_margin="5dp"
                        android:id="@+id/card_add1"
                        android:background="@drawable/background_ripple_item"
                        android:layout_alignParentStart="true"
                        android:layout_height="@dimen/img_width_height">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="+"
                                android:id="@+id/add1"
                                android:layout_centerInParent="true"
                                android:textStyle="bold"
                                android:textSize="60sp"
                                android:textColor="@android:color/black"/>


                            <ImageView
                                android:layout_centerInParent="true"
                                android:id="@+id/img1"
                                android:padding="1dp"
                                android:scaleType="centerCrop"
                                android:layout_width="@dimen/img_width_height"
                                android:layout_height="@dimen/img_width_height"
                                />


                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/img_width_height"
                        android:layout_margin="5dp"
                        android:id="@+id/card_add2"
                        android:layout_toEndOf="@+id/card_add1"
                        android:visibility="gone"
                        android:background="@drawable/background_ripple_item"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/img_width_height">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="+"
                                android:id="@+id/add2"
                                android:layout_centerInParent="true"
                                android:textStyle="bold"
                                android:textSize="60sp"
                                android:textColor="@android:color/black"/>


                            <ImageView
                                android:layout_centerInParent="true"
                                android:id="@+id/img2"
                                android:padding="1dp"
                                android:layout_width="@dimen/img_width_height"
                                android:layout_height="@dimen/img_width_height"
                                />


                        </RelativeLayout>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/img_width_height"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:layout_height="@dimen/img_width_height">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="+"
                                android:layout_centerInParent="true"
                                android:textStyle="bold"
                                android:textSize="60sp"
                                android:textColor="@android:color/black"/>

                            <ImageView
                                android:layout_centerInParent="true"
                                android:layout_width="@dimen/img_width_height"
                                android:layout_height="@dimen/img_width_height"
                                />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#e3e3e3"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/textmidlle4"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anonymat"
                        android:id="@+id/textmidlle4"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_centerInParent="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#e3e3e3"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/textmidlle4"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Envoyer sous anonymat"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/anonymatCB"
                        android:textSize="14sp"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/anonymatCB"
                        android:checked="true"/>

                </RelativeLayout>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="SOUMETTRE"
                    android:textColor="@android:color/white"
                    android:fontFamily="monospace"
                    android:id="@+id/validate"
                    android:backgroundTint="@color/colorPrimaryDark"
                    style="@style/TextAppearance.MaterialComponents.Button"/>


            </LinearLayout>


        </ScrollView>


    </androidx.cardview.widget.CardView>

</LinearLayout>