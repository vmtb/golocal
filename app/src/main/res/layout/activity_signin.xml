<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_signup.Login"
    android:background="@drawable/side_nav_bar"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/logo"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#e3e3e3"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/textmidlle"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inscrivez-vous sur GoLocal"
                        android:id="@+id/textmidlle"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_centerInParent="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#e3e3e3"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/textmidlle"/>


                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"
                    style="@style/Theme.MaterialComponents.Light.DarkActionBar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:maxLength="100"
                        android:singleLine="true"
                        android:id="@+id/surname"
                        android:textSize="14sp"
                        android:inputType="textPersonName"
                        android:hint="Prenom"/>

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"
                    style="@style/Theme.MaterialComponents.Light.DarkActionBar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:maxLength="100"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:id="@+id/name"
                        android:inputType="textPersonName"
                        android:hint="Nom"/>

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"
                    app:prefixText="+229"
                    app:prefixTextColor="@color/colorPrimary"
                    style="@style/Theme.MaterialComponents.Light.DarkActionBar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:maxLength="8"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:id="@+id/phone"
                        android:inputType="phone"
                        android:hint="Contact"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:id="@+id/sexe"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"  />


                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:id="@+id/email"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"  />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:id="@+id/arrond"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"  />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    style="@style/Theme.MaterialComponents.Light.DarkActionBar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:maxLength="100"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:id="@+id/createPassWord"
                        android:inputType="textPassword"
                        android:hint="Créer un mot de passe"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    style="@style/Theme.MaterialComponents.Light.DarkActionBar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:maxLength="100"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:inputType="textPassword"
                        android:id="@+id/confirmPassWord"
                        android:hint="Répéter le mot de passe"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="S'INSCRIRE"
                    android:textColor="@android:color/white"
                    android:fontFamily="monospace"
                    android:id="@+id/validate"
                    android:backgroundTint="@color/colorPrimaryDark"
                    style="@style/TextAppearance.MaterialComponents.Button"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#e3e3e3"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/textmidlle3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="J'ai déjà un compte"
                        android:id="@+id/textmidlle3"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_centerInParent="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#e3e3e3"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/textmidlle3"/>

                </RelativeLayout>



            </LinearLayout>


        </ScrollView>


    </androidx.cardview.widget.CardView>

</LinearLayout>